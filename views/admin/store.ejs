<%- include('partials/header') %>

<% if (message === 'category_added') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">Category added!</div>
<% } else if (message === 'item_added') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">Item added!</div>
<% } %>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div>
        <h3 class="text-2xl font-bold text-white mb-4">Add Category</h3>
        <form method="POST" class="card p-6 space-y-4 mb-6">
            <input type="hidden" name="action" value="add_category">
            <div>
                <label class="block text-slate-300 mb-2">Category Name</label>
                <input type="text" name="name" required class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Description</label>
                <textarea name="description" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white"></textarea>
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Icon (Font Awesome)</label>
                <input type="text" name="icon" placeholder="fas fa-star" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
            </div>
            <button type="submit" class="btn-success w-full px-4 py-2 rounded text-white">Add Category</button>
        </form>

        <h3 class="text-2xl font-bold text-white mb-4">Add Store Item</h3>
        <form method="POST" class="card p-6 space-y-4">
            <input type="hidden" name="action" value="add_item">
            <div>
                <label class="block text-slate-300 mb-2">Category</label>
                <select name="category_id" required class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
                    <% categories.forEach(cat => { %>
                        <option value="<%= cat.id %>"><%= cat.name %></option>
                    <% }); %>
                </select>
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Item Name</label>
                <input type="text" name="name" required class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Description</label>
                <textarea name="description" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white"></textarea>
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Price</label>
                <input type="number" step="0.01" name="price" required class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Command</label>
                <input type="text" name="command" placeholder="give {player} diamond 1" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white font-mono">
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Icon URL</label>
                <input type="url" name="icon_url" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
            </div>
            <div>
                <label class="flex items-center">
                    <input type="checkbox" name="featured" class="mr-2">
                    <span class="text-slate-300">Featured</span>
                </label>
            </div>
            <button type="submit" class="btn-primary w-full px-4 py-2 rounded text-white">Add Item</button>
        </form>
    </div>
    <div>
        <h3 class="text-2xl font-bold text-white mb-4">Store Items</h3>
        <div class="space-y-4">
            <% if (!items || items.length === 0) { %>
                <div class="card p-6 text-center text-slate-400">No items yet.</div>
            <% } else { %>
                <% items.forEach(item => { %>
                    <div class="card p-4">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <h4 class="text-lg font-bold text-white"><%= item.name %></h4>
                                <p class="text-sm text-slate-400"><%= item.category_name %></p>
                            </div>
                            <span class="px-2 py-1 text-xs rounded bg-green-900/30 text-green-300">$<%= item.price %></span>
                        </div>
                        <p class="text-sm text-slate-300 mb-2"><%= item.description %></p>
                        <% if (item.command) { %>
                            <p class="text-xs text-slate-500 font-mono"><%= item.command %></p>
                        <% } %>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

