<%- include('partials/header') %>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <div class="card p-6 rounded-xl border border-purple-500/20">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-slate-400 text-sm uppercase tracking-wide mb-2">Total Logs</p>
                <p class="text-4xl font-black text-white"><%= stats.total.toLocaleString() %></p>
            </div>
            <div class="w-16 h-16 bg-gradient-to-br from-slate-500 to-slate-600 rounded-xl flex items-center justify-center">
                <i class="fas fa-list text-white text-2xl"></i>
            </div>
        </div>
    </div>
    <div class="card p-6 rounded-xl border border-purple-500/20">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-slate-400 text-sm uppercase tracking-wide mb-2">Today</p>
                <p class="text-4xl font-black text-blue-400"><%= stats.today.toLocaleString() %></p>
            </div>
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center">
                <i class="fas fa-calendar-day text-white text-2xl"></i>
            </div>
        </div>
    </div>
    <div class="card p-6 rounded-xl border border-purple-500/20">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-slate-400 text-sm uppercase tracking-wide mb-2">This Week</p>
                <p class="text-4xl font-black text-green-400"><%= stats.week.toLocaleString() %></p>
            </div>
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center">
                <i class="fas fa-calendar-week text-white text-2xl"></i>
            </div>
        </div>
    </div>
    <div class="card p-6 rounded-xl border border-purple-500/20">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-slate-400 text-sm uppercase tracking-wide mb-2">This Month</p>
                <p class="text-4xl font-black text-purple-400"><%= stats.month.toLocaleString() %></p>
            </div>
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center">
                <i class="fas fa-calendar-alt text-white text-2xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card p-6 mb-6 rounded-xl">
    <form method="GET" class="flex flex-wrap gap-4 items-end">
        <div class="flex-1 min-w-[200px]">
            <label class="block text-slate-300 mb-2 text-sm font-medium">Search</label>
            <input type="text" name="search" value="<%= search %>" placeholder="Search actions..."
                   class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white focus:border-purple-500 focus:outline-none">
        </div>
        <div class="min-w-[150px]">
            <label class="block text-slate-300 mb-2 text-sm font-medium">Time Filter</label>
            <select name="filter" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white focus:border-purple-500 focus:outline-none">
                <option value="all" <%= filter === 'all' ? 'selected' : '' %>>All Time</option>
                <option value="today" <%= filter === 'today' ? 'selected' : '' %>>Today</option>
                <option value="week" <%= filter === 'week' ? 'selected' : '' %>>This Week</option>
                <option value="month" <%= filter === 'month' ? 'selected' : '' %>>This Month</option>
            </select>
        </div>
        <div class="min-w-[150px]">
            <label class="block text-slate-300 mb-2 text-sm font-medium">Admin</label>
            <select name="admin" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white focus:border-purple-500 focus:outline-none">
                <option value="">All Admins</option>
                <% admins.forEach(admin => { %>
                    <option value="<%= admin.admin %>" <%= adminFilter === admin.admin ? 'selected' : '' %>><%= admin.admin %></option>
                <% }); %>
            </select>
        </div>
        <div class="flex gap-2">
            <button type="submit" class="btn-primary px-6 py-2 rounded-lg text-white font-semibold">
                <i class="fas fa-search mr-2"></i>Filter
            </button>
            <button type="button" onclick="exportLogs()" class="bg-green-600 hover:bg-green-700 px-6 py-2 rounded-lg text-white font-semibold">
                <i class="fas fa-download mr-2"></i>Export CSV
            </button>
        </div>
    </form>
</div>

<!-- Logs Table -->
<div class="card rounded-xl overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full" id="logsTable">
            <thead class="bg-slate-900/50">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Admin</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Action</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Target</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">IP Address</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Timestamp</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-700">
                <% if (!logs || logs.length === 0) { %>
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-slate-400">
                            <i class="fas fa-history text-4xl mb-4 text-slate-600"></i>
                            <p class="text-lg">No logs found</p>
                            <p class="text-sm mt-2">Try adjusting your filters</p>
                        </td>
                    </tr>
                <% } else { %>
                    <% logs.forEach(log => { %>
                        <tr class="hover:bg-slate-800/50 transition">
                            <td class="px-6 py-4 text-slate-400 text-sm">#<%= log.id %></td>
                            <td class="px-6 py-4">
                                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-purple-900/50 text-purple-300 border border-purple-500/30">
                                    <%= log.admin %>
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <p class="text-white text-sm"><%= log.action %></p>
                            </td>
                            <td class="px-6 py-4">
                                <% if (log.target_type) { %>
                                    <span class="px-2 py-1 rounded text-xs bg-slate-700 text-slate-300">
                                        <%= log.target_type %><% if (log.target_id) { %> #<%= log.target_id %><% } %>
                                    </span>
                                <% } else { %>
                                    <span class="text-slate-500 text-sm">-</span>
                                <% } %>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-slate-400 text-sm font-mono"><%= log.ip || '-' %></span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-slate-400 text-sm">
                                    <%= new Date(log.timestamp).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                                </span>
                            </td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
    
    <!-- Pagination -->
    <% if (totalPages > 1) { %>
        <div class="p-6 border-t border-slate-700 flex items-center justify-between">
            <p class="text-slate-400 text-sm">
                Showing <%= (page - 1) * 50 + 1 %> to <%= Math.min(page * 50, totalCount) %> of <%= totalCount %> logs
            </p>
            <div class="flex gap-2">
                <% if (page > 1) { %>
                    <a href="?page=<%= page - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= filter !== 'all' ? '&filter=' + filter : '' %><%= adminFilter ? '&admin=' + encodeURIComponent(adminFilter) : '' %>"
                       class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg text-white">
                        <i class="fas fa-chevron-left mr-2"></i>Previous
                    </a>
                <% } %>
                <% if (page < totalPages) { %>
                    <a href="?page=<%= page + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= filter !== 'all' ? '&filter=' + filter : '' %><%= adminFilter ? '&admin=' + encodeURIComponent(adminFilter) : '' %>"
                       class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg text-white">
                        Next<i class="fas fa-chevron-right ml-2"></i>
                    </a>
                <% } %>
            </div>
        </div>
    <% } %>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<script>
    $(document).ready(function() {
        $('#logsTable').DataTable({
            pageLength: 50,
            order: [[5, 'desc']],
            language: {
                search: "Search:",
                lengthMenu: "Show _MENU_ entries",
                info: "Showing _START_ to _END_ of _TOTAL_ logs",
                infoEmpty: "No logs to show",
                infoFiltered: "(filtered from _MAX_ total logs)"
            }
        });
    });

    function exportLogs() {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/logs/export';
        form.innerHTML = `
            <input type="hidden" name="format" value="csv">
            <input type="hidden" name="filter" value="<%= filter %>">
            <input type="hidden" name="search" value="<%= search %>">
            <input type="hidden" name="admin" value="<%= adminFilter %>">
        `;
        document.body.appendChild(form);
        form.submit();
    }
</script>

<%- include('partials/footer') %>


