<%- include('partials/header') %>

<div class="mb-6">
    <a href="/admin/players" class="text-purple-400 hover:text-purple-300 flex items-center gap-2 mb-4">
        <i class="fas fa-arrow-left"></i>Back to Players
    </a>
</div>

<!-- Player Header -->
<div class="card p-6 mb-6 rounded-xl">
    <div class="flex items-center justify-between flex-wrap gap-4">
        <div class="flex items-center gap-4">
            <div class="w-20 h-20 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
                <i class="fas fa-user text-white text-3xl"></i>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-white"><%= player.username %></h1>
                <% if (player.uuid) { %>
                    <p class="text-slate-400 font-mono text-sm mt-1"><%= player.uuid %></p>
                <% } %>
            </div>
        </div>
        <div class="flex gap-2">
            <% if (isOnline) { %>
                <span class="px-4 py-2 rounded-lg bg-green-900/50 text-green-400 border border-green-500/30">
                    <i class="fas fa-circle text-xs mr-2"></i>Online
                </span>
            <% } else { %>
                <span class="px-4 py-2 rounded-lg bg-slate-700 text-slate-400 border border-slate-600">
                    <i class="fas fa-circle text-xs mr-2"></i>Offline
                </span>
            <% } %>
            <% if (player.banned) { %>
                <span class="px-4 py-2 rounded-lg bg-red-900/50 text-red-400 border border-red-500/30">
                    <i class="fas fa-ban mr-2"></i>Banned
                </span>
            <% } %>
            <% if (player.muted) { %>
                <span class="px-4 py-2 rounded-lg bg-yellow-900/50 text-yellow-400 border border-yellow-500/30">
                    <i class="fas fa-volume-mute mr-2"></i>Muted
                </span>
            <% } %>
        </div>
    </div>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <div class="card p-6 rounded-xl border border-purple-500/20">
        <p class="text-slate-400 text-sm mb-2">Total Playtime</p>
        <p class="text-3xl font-black text-white">
            <% if (playtimeDays > 0) { %>
                <%= playtimeDays %>d <%= playtimeHours % 24 %>h
            <% } else if (playtimeHours > 0) { %>
                <%= playtimeHours %>h <%= playtimeMinutes %>m
            <% } else { %>
                <%= playtimeMinutes %>m
            <% } %>
        </p>
    </div>
    <div class="card p-6 rounded-xl border border-purple-500/20">
        <p class="text-slate-400 text-sm mb-2">Account Age</p>
        <p class="text-3xl font-black text-white"><%= accountAgeDays %> days</p>
        <p class="text-xs text-slate-500 mt-1">Since <%= new Date(player.first_seen).toLocaleDateString() %></p>
    </div>
    <div class="card p-6 rounded-xl border border-purple-500/20">
        <p class="text-slate-400 text-sm mb-2">Join Count</p>
        <p class="text-3xl font-black text-white"><%= joinCount.toLocaleString() %></p>
    </div>
    <div class="card p-6 rounded-xl border border-purple-500/20">
        <p class="text-slate-400 text-sm mb-2">Last Seen</p>
        <p class="text-lg font-bold text-white">
            <% if (isOnline) { %>
                Just now
            <% } else if (timeSinceLastSeen < 3600) { %>
                <%= Math.floor(timeSinceLastSeen / 60) %> minutes ago
            <% } else if (timeSinceLastSeen < 86400) { %>
                <%= Math.floor(timeSinceLastSeen / 3600) %> hours ago
            <% } else { %>
                <%= new Date(player.last_seen).toLocaleDateString() %>
            <% } %>
        </p>
    </div>
</div>

<!-- Player Info -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <div class="card p-6 rounded-xl">
        <h3 class="text-xl font-bold text-white mb-4">Player Information</h3>
        <div class="space-y-3">
            <div class="flex justify-between">
                <span class="text-slate-400">Rank:</span>
                <span class="text-white font-semibold"><%= player.rank || 'member' %></span>
            </div>
            <div class="flex justify-between">
                <span class="text-slate-400">Balance:</span>
                <span class="text-white font-semibold">$<%= parseFloat(player.balance || 0).toFixed(2) %></span>
            </div>
            <div class="flex justify-between">
                <span class="text-slate-400">Level:</span>
                <span class="text-white font-semibold"><%= player.level || 0 %></span>
            </div>
            <div class="flex justify-between">
                <span class="text-slate-400">Kills:</span>
                <span class="text-white font-semibold"><%= player.total_kills || 0 %></span>
            </div>
            <div class="flex justify-between">
                <span class="text-slate-400">Deaths:</span>
                <span class="text-white font-semibold"><%= player.total_deaths || 0 %></span>
            </div>
            <% if (player.banned && player.ban_reason) { %>
                <div class="pt-3 border-t border-slate-700">
                    <span class="text-slate-400">Ban Reason:</span>
                    <p class="text-red-400 mt-1"><%= player.ban_reason %></p>
                </div>
            <% } %>
            <% if (player.muted && player.mute_reason) { %>
                <div class="pt-3 border-t border-slate-700">
                    <span class="text-slate-400">Mute Reason:</span>
                    <p class="text-yellow-400 mt-1"><%= player.mute_reason %></p>
                </div>
            <% } %>
        </div>
    </div>
    
    <div class="card p-6 rounded-xl">
        <h3 class="text-xl font-bold text-white mb-4">Ban History</h3>
        <% if (bans.length === 0) { %>
            <p class="text-slate-400">No bans recorded</p>
        <% } else { %>
            <div class="space-y-3">
                <% bans.forEach(ban => { %>
                    <div class="bg-slate-900/50 p-4 rounded-lg border border-slate-700">
                        <div class="flex justify-between items-start mb-2">
                            <span class="text-red-400 font-semibold">Banned</span>
                            <span class="text-slate-400 text-xs"><%= new Date(ban.ban_date).toLocaleDateString() %></span>
                        </div>
                        <p class="text-white text-sm mb-1"><%= ban.reason %></p>
                        <p class="text-slate-500 text-xs">By: <%= ban.banned_by %> â€¢ 
                            <%= ban.active ? '<span class="text-red-400">Active</span>' : '<span class="text-green-400">Inactive</span>' %>
                        </p>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</div>

<!-- Appeals -->
<% if (appeals.length > 0) { %>
    <div class="card p-6 rounded-xl mb-6">
        <h3 class="text-xl font-bold text-white mb-4">Appeals</h3>
        <div class="space-y-3">
            <% appeals.forEach(appeal => { %>
                <div class="bg-slate-900/50 p-4 rounded-lg border border-slate-700">
                    <div class="flex justify-between items-start mb-2">
                        <span class="px-2 py-1 rounded text-xs font-semibold 
                            <%= appeal.status === 'accepted' ? 'bg-green-900/50 text-green-400' : 
                                appeal.status === 'denied' ? 'bg-red-900/50 text-red-400' : 
                                'bg-yellow-900/50 text-yellow-400' %>">
                            <%= appeal.status.toUpperCase() %>
                        </span>
                        <span class="text-slate-400 text-xs"><%= new Date(appeal.created_at).toLocaleDateString() %></span>
                    </div>
                    <p class="text-white text-sm"><%= appeal.appeal_text %></p>
                </div>
            <% }); %>
        </div>
    </div>
<% } %>

<%- include('partials/footer') %>


