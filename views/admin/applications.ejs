<%- include('partials/header') %>

<% if (message === 'role_added') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">
        <i class="fas fa-check-circle mr-2"></i>Role added successfully!
    </div>
<% } else if (message === 'reviewed') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">
        <i class="fas fa-check-circle mr-2"></i>Application reviewed successfully!
    </div>
<% } else if (message === 'deleted') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">
        <i class="fas fa-check-circle mr-2"></i>Application deleted successfully!
    </div>
<% } %>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div>
        <h3 class="text-2xl font-bold text-white mb-4">Add Application Role</h3>
        <form method="POST" class="card p-6 space-y-4">
            <input type="hidden" name="action" value="add_role">
            <div>
                <label class="block text-slate-300 mb-2">Role Name</label>
                <input type="text" name="role" required class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Description</label>
                <textarea name="description" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white"></textarea>
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Requirements</label>
                <textarea name="requirements" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white"></textarea>
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Status</label>
                <select name="status" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
                    <option value="open">Open</option>
                    <option value="closed">Closed</option>
                    <option value="coming_soon">Coming Soon</option>
                </select>
            </div>
            <button type="submit" class="btn-primary w-full px-4 py-2 rounded text-white">Add Role</button>
        </form>
    </div>
    <div>
        <h3 class="text-2xl font-bold text-white mb-4">Pending Applications</h3>
        <div class="space-y-4">
            <% if (!pendingApps || pendingApps.length === 0) { %>
                <div class="card p-6 text-center text-slate-400">No pending applications.</div>
            <% } else { %>
                <% pendingApps.forEach(app => { %>
                    <div class="card p-6">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h4 class="text-xl font-bold text-white"><%= app.username %></h4>
                                <p class="text-sm text-slate-400">Applied for: <%= app.role %></p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-xs bg-yellow-900 text-yellow-300">Pending</span>
                        </div>
                        <div class="mb-4 space-y-2 text-sm">
                            <p><span class="text-slate-400">Email:</span> <span class="text-white"><%= app.email %></span></p>
                            <p><span class="text-slate-400">Discord:</span> <span class="text-white"><%= app.discord %></span></p>
                            <p><span class="text-slate-400">Age:</span> <span class="text-white"><%= app.age || 'N/A' %></span></p>
                        </div>
                        <div class="mb-4">
                            <p class="text-slate-300 mb-2">Experience:</p>
                            <p class="bg-slate-900 p-3 rounded text-slate-200 whitespace-pre-wrap"><%= app.experience %></p>
                        </div>
                        <div class="flex gap-2">
                            <form method="POST" class="inline">
                                <input type="hidden" name="action" value="review">
                                <input type="hidden" name="app_id" value="<%= app.id %>">
                                <input type="hidden" name="decision" value="accepted">
                                <button type="submit" class="btn-success px-4 py-2 rounded text-sm text-white">Accept</button>
                            </form>
                            <form method="POST" class="inline">
                                <input type="hidden" name="action" value="review">
                                <input type="hidden" name="app_id" value="<%= app.id %>">
                                <input type="hidden" name="decision" value="rejected">
                                <button type="submit" class="btn-danger px-4 py-2 rounded text-sm text-white">Reject</button>
                            </form>
                            <form method="POST" class="inline" onsubmit="return confirm('Delete this application?');">
                                <input type="hidden" name="action" value="delete">
                                <input type="hidden" name="app_id" value="<%= app.id %>">
                                <button type="submit" class="bg-gray-600 hover:bg-gray-700 px-4 py-2 rounded text-sm text-white">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

