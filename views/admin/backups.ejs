<%- include('partials/header') %>

<% if (message) { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300"><%= message %></div>
<% } %>

<% if (error) { %>
    <div class="bg-red-900/50 border border-red-500 rounded-lg p-4 mb-6 text-red-300"><%= error %></div>
<% } %>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div>
        <h3 class="text-2xl font-bold text-white mb-4">Create Backup</h3>
        <div class="card p-6">
            <p class="text-slate-300 mb-4">Create a full database backup. This will export all tables and data to a SQL file.</p>
            <form method="POST">
                <input type="hidden" name="action" value="create_backup">
                <button type="submit" class="btn-primary w-full px-4 py-2 rounded text-white">
                    <i class="fas fa-database mr-2"></i>Create Backup
                </button>
            </form>
        </div>
    </div>
    <div>
        <h3 class="text-2xl font-bold text-white mb-4">Backup Files</h3>
        <div class="space-y-4">
            <% if (!files || files.length === 0) { %>
                <div class="card p-6 text-center text-slate-400">No backups yet.</div>
            <% } else { %>
                <% files.forEach(file => { %>
                    <div class="card p-4">
                        <div class="flex justify-between items-start">
                            <div>
                                <h4 class="text-white font-semibold"><%= file.name %></h4>
                                <p class="text-sm text-slate-400">
                                    <%= (file.size / 1024).toFixed(2) %> KB â€¢ 
                                    <%= new Date(file.modified).toLocaleString() %>
                                </p>
                            </div>
                            <div class="flex gap-2">
                                <a href="<%= file.url %>" download class="text-blue-400 hover:text-blue-300">
                                    <i class="fas fa-download"></i>
                                </a>
                                <form method="POST" class="inline" onsubmit="return confirm('Delete this backup?');">
                                    <input type="hidden" name="action" value="delete_backup">
                                    <input type="hidden" name="filename" value="<%= file.name %>">
                                    <button type="submit" class="text-red-400 hover:text-red-300">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>


