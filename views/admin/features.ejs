<%- include('partials/header') %>

<% if (message === 'added') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">Feature added!</div>
<% } else if (message === 'updated') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">Feature updated!</div>
<% } else if (message === 'deleted') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">Feature deleted!</div>
<% } %>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div>
        <h3 class="text-2xl font-bold text-white mb-4"><%= editItem ? 'Edit' : 'Add' %> Feature</h3>
        <form method="POST" class="card p-6 space-y-4">
            <input type="hidden" name="action" value="<%= editItem ? 'update' : 'add' %>">
            <% if (editItem) { %><input type="hidden" name="id" value="<%= editItem.id %>"><% } %>
            <div>
                <label class="block text-slate-300 mb-2">Title</label>
                <input type="text" name="title" required value="<%= editItem ? editItem.title : '' %>" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Description</label>
                <textarea name="description" required rows="4" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white"><%= editItem ? editItem.description : '' %></textarea>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-slate-300 mb-2">Icon (Font Awesome)</label>
                    <input type="text" name="icon" value="<%= editItem ? editItem.icon : '' %>" placeholder="fas fa-star" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
                </div>
                <div>
                    <label class="block text-slate-300 mb-2">Order</label>
                    <input type="number" name="order_index" value="<%= editItem ? editItem.order_index : 0 %>" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
                </div>
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Category</label>
                <input type="text" name="category" value="<%= editItem ? editItem.category : 'general' %>" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white">
            </div>
            <button type="submit" class="btn-primary w-full px-4 py-2 rounded text-white"><%= editItem ? 'Update' : 'Add' %> Feature</button>
            <% if (editItem) { %><a href="/admin/features" class="block text-center text-slate-400 hover:text-slate-300 mt-2">Cancel</a><% } %>
        </form>
    </div>
    <div>
        <h3 class="text-2xl font-bold text-white mb-4">All Features</h3>
        <div class="space-y-4">
            <% if (!features || features.length === 0) { %>
                <div class="card p-6 text-center text-slate-400">No features yet.</div>
            <% } else { %>
                <% features.forEach(feature => { %>
                    <div class="card p-4">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <% if (feature.icon) { %><i class="<%= feature.icon %> mr-2"></i><% } %>
                                <h4 class="text-lg font-bold text-white"><%= feature.title %></h4>
                            </div>
                            <div class="flex gap-2">
                                <a href="?edit=<%= feature.id %>" class="text-blue-400 hover:text-blue-300 text-sm">Edit</a>
                                <form method="POST" class="inline" onsubmit="return confirm('Delete this feature?');">
                                    <input type="hidden" name="action" value="delete">
                                    <input type="hidden" name="id" value="<%= feature.id %>">
                                    <button type="submit" class="text-red-400 hover:text-red-300 text-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                        <p class="text-sm text-slate-400"><%= feature.description %></p>
                        <span class="text-xs text-slate-500 mt-2">Category: <%= feature.category %></span>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>


