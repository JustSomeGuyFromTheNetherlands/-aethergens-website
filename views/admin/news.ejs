<%- include('partials/header') %>

<% if (message === 'added') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">
        <i class="fas fa-check-circle mr-2"></i>News post added successfully!
    </div>
<% } else if (message === 'updated') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">
        <i class="fas fa-check-circle mr-2"></i>News post updated successfully!
    </div>
<% } else if (message === 'deleted') { %>
    <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">
        <i class="fas fa-check-circle mr-2"></i>News post deleted successfully!
    </div>
<% } %>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div>
        <h3 class="text-2xl font-bold text-white mb-4"><%= editItem ? 'Edit' : 'Add' %> News Post</h3>
        <form method="POST" id="newsForm" class="card p-6 space-y-4" onsubmit="return validateForm()">
            <input type="hidden" name="action" value="<%= editItem ? 'update' : 'add' %>">
            <% if (editItem) { %>
                <input type="hidden" name="id" value="<%= editItem.id %>">
            <% } %>
            <div>
                <label class="block text-slate-300 mb-2">Title <span class="text-red-400">*</span></label>
                <input type="text" name="title" id="newsTitle" required value="<%= editItem ? editItem.title : '' %>" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white" maxlength="255">
                <p class="text-xs text-slate-500 mt-1"><span id="titleCount">0</span>/255 characters</p>
                <p class="text-xs text-red-400 hidden" id="titleError"></p>
            </div>
            <div>
                <label class="block text-slate-300 mb-2">Content <span class="text-red-400">*</span></label>
                <textarea name="content" id="newsContent" required rows="10" class="w-full bg-slate-900 border border-slate-700 rounded px-3 py-2 text-white"><%= editItem ? editItem.content : '' %></textarea>
                <p class="text-xs text-red-400 hidden" id="contentError"></p>
            </div>
            <div>
                <label class="flex items-center space-x-2">
                    <input type="checkbox" name="published" <%= (editItem && editItem.published) ? 'checked' : '' %> class="w-4 h-4">
                    <span class="text-slate-300">Publish immediately</span>
                </label>
            </div>
            <div class="flex gap-2">
                <button type="submit" class="btn-primary flex-1 px-4 py-2 rounded text-white"><%= editItem ? 'Update' : 'Add' %> Post</button>
                <button type="button" onclick="saveDraft()" class="bg-slate-700 hover:bg-slate-600 px-4 py-2 rounded text-white">Save Draft</button>
            </div>
            <% if (editItem) { %>
                <a href="/admin/news" class="block text-center text-slate-400 hover:text-slate-300">Cancel</a>
            <% } %>
        </form>
        
        <script>
        document.getElementById('newsTitle')?.addEventListener('input', function() {
            document.getElementById('titleCount').textContent = this.value.length;
        });
        
        function validateForm() {
            const title = document.getElementById('newsTitle').value.trim();
            const content = document.getElementById('newsContent').value.trim();
            let valid = true;
            
            if (title.length < 3) {
                document.getElementById('titleError').textContent = 'Title must be at least 3 characters';
                document.getElementById('titleError').classList.remove('hidden');
                valid = false;
            } else {
                document.getElementById('titleError').classList.add('hidden');
            }
            
            if (content.length < 10) {
                document.getElementById('contentError').textContent = 'Content must be at least 10 characters';
                document.getElementById('contentError').classList.remove('hidden');
                valid = false;
            } else {
                document.getElementById('contentError').classList.add('hidden');
            }
            
            return valid;
        }
        
        function saveDraft() {
            const draft = {
                title: document.getElementById('newsTitle').value,
                content: document.getElementById('newsContent').value,
                timestamp: new Date().toISOString()
            };
            localStorage.setItem('news_draft', JSON.stringify(draft));
            const btn = event?.target || document.querySelector('[onclick="saveDraft()"]');
            if (btn) {
                const original = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check mr-2"></i>Saved';
                btn.classList.add('bg-green-600');
                setTimeout(() => {
                    btn.innerHTML = original;
                    btn.classList.remove('bg-green-600');
                }, 2000);
            }
        }
        
        document.getElementById('newsForm')?.addEventListener('submit', function() {
            localStorage.removeItem('news_draft');
        });
        </script>
    </div>
    <div>
        <h3 class="text-2xl font-bold text-white mb-4">All News Posts</h3>
        <div class="space-y-4">
            <% if (!news || news.length === 0) { %>
                <div class="card p-6 text-center text-slate-400">No news posts yet.</div>
            <% } else { %>
                <% news.forEach(item => { %>
                    <div class="card p-4">
                        <div class="flex justify-between items-start mb-2">
                            <h4 class="text-lg font-bold text-white"><%= item.title %></h4>
                            <span class="px-2 py-1 rounded text-xs <%= item.published ? 'bg-green-900 text-green-300' : 'bg-yellow-900 text-yellow-300' %>">
                                <%= item.published ? 'Published' : 'Draft' %>
                            </span>
                        </div>
                        <p class="text-sm text-slate-400 mb-2"><%= item.content.substring(0, 100) %>...</p>
                        <div class="flex gap-2 mt-4">
                            <a href="?edit=<%= item.id %>" class="text-blue-400 hover:text-blue-300 text-sm">Edit</a>
                            <form method="POST" class="inline" onsubmit="return confirm('Delete this post?');">
                                <input type="hidden" name="action" value="delete">
                                <input type="hidden" name="id" value="<%= item.id %>">
                                <button type="submit" class="text-red-400 hover:text-red-300 text-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

