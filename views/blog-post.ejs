<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> - <%= serverSettings ? serverSettings.server_name : 'Server' %></title>
  <meta name="description" content="<%= pageDescription %>">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
    * { font-family: 'Inter', sans-serif; }
    body { background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 50%, #2d1b3d 100%); min-height: 100vh; }
    .hero-gradient { background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%); }
    .card-hover { transition: all 0.3s ease; }
    .card-hover:hover { transform: translateY(-5px); box-shadow: 0 20px 40px rgba(0,0,0,0.3); }
    .glow { box-shadow: 0 0 20px rgba(102, 126, 234, 0.5); }
    .post-content { line-height: 1.8; }
    .post-content h1, .post-content h2, .post-content h3, .post-content h4, .post-content h5, .post-content h6 {
      color: #a78bfa; margin-top: 2rem; margin-bottom: 1rem; font-weight: 600;
    }
    .post-content p { margin-bottom: 1.5rem; }
    .post-content img { max-width: 100%; height: auto; border-radius: 8px; margin: 1rem 0; }
    .post-content blockquote { border-left: 4px solid #a78bfa; padding-left: 1rem; margin: 1.5rem 0; font-style: italic; opacity: 0.8; }
    .post-content code { background: rgba(0, 0, 0, 0.2); padding: 0.2rem 0.4rem; border-radius: 4px; font-family: 'Monaco', 'Menlo', monospace; }
    .post-content pre { background: rgba(0, 0, 0, 0.2); padding: 1rem; border-radius: 8px; overflow-x: auto; margin: 1rem 0; }
    .post-content pre code { background: none; padding: 0; }
  </style>
</head>
<body class="text-slate-200">
  <!-- Navigation -->
  <nav class="bg-slate-900/80 backdrop-blur-md border-b border-purple-500/20 sticky top-0 z-50 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-20 items-center">
        <div class="flex items-center space-x-2">
          <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center">
            <i class="fas fa-cube text-white text-xl"></i>
          </div>
          <a href="/" class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent hover:opacity-80 transition"><%= serverSettings ? serverSettings.server_name : 'Minecraft Server' %></a>
        </div>
        <div class="hidden md:flex items-center space-x-8">
          <a href="/" class="hover:text-purple-400 transition font-medium">Home</a>
          <a href="/status" class="hover:text-purple-400 transition font-medium">Status</a>
          <a href="/leaderboard" class="hover:text-purple-400 transition font-medium">Leaderboard</a>
          <a href="/shop" class="hover:text-purple-400 transition font-medium">Shop</a>
          <a href="/blog" class="hover:text-purple-400 transition font-medium text-purple-400"><i class="fas fa-blog mr-1"></i>Blog</a>
          <a href="/changelog" class="hover:text-purple-400 transition font-medium">Changelog</a>
          <a href="/vote" class="hover:text-purple-400 transition font-medium">Vote</a>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/admin" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-6 py-2 rounded-lg font-semibold shadow-lg glow hidden md:block">Admin</a>
          <button id="mobile-menu-btn" class="md:hidden text-slate-200 hover:text-purple-400 transition p-2">
            <i class="fas fa-bars text-xl"></i>
          </button>
        </div>
      </div>
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-purple-500/20 mt-2 pt-4">
        <div class="flex flex-col space-y-3">
          <a href="/" class="hover:text-purple-400 transition font-medium py-2">Home</a>
          <a href="/status" class="hover:text-purple-400 transition font-medium py-2">Status</a>
          <a href="/leaderboard" class="hover:text-purple-400 transition font-medium py-2">Leaderboard</a>
          <a href="/shop" class="hover:text-purple-400 transition font-medium py-2">Shop</a>
          <a href="/blog" class="hover:text-purple-400 transition font-medium py-2 text-purple-400"><i class="fas fa-blog mr-1"></i>Blog</a>
          <a href="/changelog" class="hover:text-purple-400 transition font-medium py-2">Changelog</a>
          <a href="/vote" class="hover:text-purple-400 transition font-medium py-2">Vote</a>
          <a href="/admin" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-6 py-2 rounded-lg font-semibold shadow-lg text-center mt-2">Admin</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Post Header -->
  <section class="hero-gradient py-20 text-center relative overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-0 left-0 w-96 h-96 bg-purple-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-pink-500 rounded-full blur-3xl"></div>
    </div>
    <div class="relative z-10 max-w-4xl mx-auto px-4">
      <% if (post.category_name) { %>
        <div class="mb-4">
          <span class="inline-block px-4 py-2 rounded-full text-sm font-semibold" style="background-color: <%= post.category_color %>;">
            <i class="fas fa-tag mr-1"></i><%= post.category_name %>
          </span>
        </div>
      <% } %>

      <h1 class="text-4xl md:text-5xl font-black text-white mb-6 leading-tight"><%= post.title %></h1>

      <div class="flex flex-wrap justify-center items-center gap-4 text-slate-100 text-sm">
        <span><i class="fas fa-user mr-1"></i><%= post.author_name || 'Anonymous' %></span>
        <span><i class="fas fa-calendar mr-1"></i><%= new Date(post.published_at || post.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
        <span><i class="fas fa-eye mr-1"></i><%= post.views || 0 %> views</span>
        <span><i class="fas fa-clock mr-1"></i><%= Math.ceil(post.content.length / 1000) %> min read</span>
      </div>
    </div>
  </section>

  <!-- Post Content -->
  <section class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <% if (post.featured_image) { %>
        <div class="mb-8">
          <img src="<%= post.featured_image %>" alt="<%= post.title %>" class="w-full rounded-2xl shadow-2xl">
        </div>
      <% } %>

      <% if (post.excerpt) { %>
        <div class="text-xl text-slate-300 text-center mb-8 leading-relaxed"><%= post.excerpt %></div>
      <% } %>

      <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-8 border border-purple-500/20">
        <div class="post-content text-slate-200">
          <%= post.content %>
        </div>

        <!-- Tags -->
        <% if (tags.length > 0) { %>
          <div class="mt-8 pt-8 border-t border-purple-500/20">
            <h6 class="text-slate-400 mb-4 flex items-center">
              <i class="fas fa-tags mr-2 text-purple-400"></i>Tags
            </h6>
            <div class="flex flex-wrap gap-2">
              <% tags.forEach(tag => { %>
                <a href="/blog?tag=<%= tag.id %>"
                   class="px-3 py-1 rounded-full text-xs font-semibold transition hover:opacity-80"
                   style="background-color: <%= tag.color %>20; color: <%= tag.color %>; border: 1px solid <%= tag.color %>40;">
                  #<%= tag.name %>
                </a>
              <% }); %>
            </div>
          </div>
        <% } %>

        <!-- Share Buttons -->
        <div class="mt-8 pt-8 border-t border-purple-500/20">
          <h6 class="text-slate-400 mb-4 flex items-center">
            <i class="fas fa-share mr-2 text-purple-400"></i>Share this post
          </h6>
          <div class="flex flex-wrap gap-3">
            <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent(post.title) %>&url=<%= encodeURIComponent(`${req.protocol}://${req.get('host')}/blog/${post.slug}`) %>"
               class="px-4 py-2 bg-slate-700/50 border border-purple-500/20 rounded-lg hover:bg-purple-500/20 transition"
               target="_blank">
              <i class="fab fa-twitter mr-2"></i>Twitter
            </a>
            <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(`${req.protocol}://${req.get('host')}/blog/${post.slug}`) %>"
               class="px-4 py-2 bg-slate-700/50 border border-purple-500/20 rounded-lg hover:bg-purple-500/20 transition"
               target="_blank">
              <i class="fab fa-facebook mr-2"></i>Facebook
            </a>
            <a href="https://wa.me/?text=<%= encodeURIComponent(`${post.title} - ${req.protocol}://${req.get('host')}/blog/${post.slug}`) %>"
               class="px-4 py-2 bg-slate-700/50 border border-purple-500/20 rounded-lg hover:bg-purple-500/20 transition"
               target="_blank">
              <i class="fab fa-whatsapp mr-2"></i>WhatsApp
            </a>
            <button class="px-4 py-2 bg-slate-700/50 border border-purple-500/20 rounded-lg hover:bg-purple-500/20 transition" onclick="navigator.share({ title: '<%= post.title %>', url: window.location.href })">
              <i class="fas fa-share mr-2"></i>Share
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Comments Section -->
  <% if (post.comments_enabled) { %>
    <section class="py-12 bg-slate-900/40">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h3 class="text-2xl font-bold text-white mb-6 flex items-center">
          <i class="fas fa-comments text-purple-400 mr-2"></i>
          Comments (<%= comments.length %>)
        </h3>

        <!-- Comment Form -->
        <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 mb-8">
          <h5 class="text-lg font-bold text-white mb-4">Leave a Comment</h5>
          <form id="commentForm">
            <div class="mb-4">
              <label for="author_name" class="block text-sm font-medium text-slate-300 mb-2">Name <span class="text-red-400">*</span></label>
              <input type="text" id="author_name" name="author_name" required
                     class="w-full px-4 py-2 bg-slate-700/50 border border-purple-500/20 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-purple-500">
            </div>
            <div class="mb-4">
              <label for="author_email" class="block text-sm font-medium text-slate-300 mb-2">Email (optional)</label>
              <input type="email" id="author_email" name="author_email"
                     class="w-full px-4 py-2 bg-slate-700/50 border border-purple-500/20 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-purple-500">
              <p class="text-xs text-slate-500 mt-1">Your email will not be published.</p>
            </div>
            <div class="mb-4">
              <label for="content" class="block text-sm font-medium text-slate-300 mb-2">Comment <span class="text-red-400">*</span></label>
              <textarea id="content" name="content" rows="4" required
                        class="w-full px-4 py-2 bg-slate-700/50 border border-purple-500/20 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-purple-500"></textarea>
            </div>
            <button type="submit" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-6 py-2 rounded-lg font-semibold shadow-lg transition">
              <i class="fas fa-paper-plane mr-2"></i>Post Comment
            </button>
          </form>
        </div>

        <!-- Comments List -->
        <div id="commentsList">
          <% if (comments.length === 0) { %>
            <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-12 border border-purple-500/20 text-center">
              <i class="fas fa-comments text-6xl text-slate-500 mb-4"></i>
              <h5 class="text-xl font-bold text-white mb-2">No comments yet</h5>
              <p class="text-slate-400">Be the first to comment!</p>
            </div>
          <% } else { %>
            <div class="space-y-4">
              <% comments.forEach(comment => { %>
                <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20">
                  <div class="flex justify-between items-start mb-3">
                    <h6 class="font-bold text-purple-400"><%= comment.author_name %></h6>
                    <small class="text-slate-500">
                      <%= new Date(comment.created_at).toLocaleDateString() %>
                    </small>
                  </div>
                  <p class="text-slate-300 mb-3"><%= comment.content %></p>
                  <button class="text-purple-400 hover:text-purple-300 text-sm transition" onclick="replyToComment(<%= comment.id %>)">
                    <i class="fas fa-reply mr-1"></i>Reply
                  </button>

                  <!-- Replies -->
                  <% if (comment.replies && comment.replies.length > 0) { %>
                    <div class="mt-4 ml-6 space-y-3">
                      <% comment.replies.forEach(reply => { %>
                        <div class="bg-slate-700/30 rounded-xl p-4 border border-purple-500/10">
                          <div class="flex justify-between items-start mb-2">
                            <h6 class="font-semibold text-purple-300 text-sm"><%= reply.author_name %></h6>
                            <small class="text-slate-500 text-xs">
                              <%= new Date(reply.created_at).toLocaleDateString() %>
                            </small>
                          </div>
                          <p class="text-slate-300 text-sm"><%= reply.content %></p>
                        </div>
                      <% }); %>
                    </div>
                  <% } %>
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>
      </div>
    </section>
  <% } %>

  <!-- Related Posts -->
  <% if (relatedPosts.length > 0) { %>
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h3 class="text-2xl font-bold text-white mb-6 text-center flex items-center justify-center">
          <i class="fas fa-link text-purple-400 mr-2"></i>Related Posts
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% relatedPosts.forEach(relatedPost => { %>
            <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl border border-purple-500/20 card-hover overflow-hidden">
              <% if (relatedPost.featured_image) { %>
                <div class="h-40 bg-cover bg-center" style="background-image: url('<%= relatedPost.featured_image %>')"></div>
              <% } %>
              <div class="p-6">
                <h6 class="text-lg font-bold text-white mb-2">
                  <a href="/blog/<%= relatedPost.slug %>" class="hover:text-purple-400 transition"><%= relatedPost.title %></a>
                </h6>
                <p class="text-slate-400 text-sm mb-3 line-clamp-2"><%= relatedPost.excerpt ? relatedPost.excerpt.substring(0, 100) + '...' : '' %></p>
                <small class="text-slate-500">
                  <%= new Date(relatedPost.published_at).toLocaleDateString() %>
                </small>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </section>
  <% } %>

  <!-- Footer -->
  <footer class="bg-slate-900/80 border-t border-purple-500/20 py-8 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <p class="text-slate-400">
            <i class="fas fa-server mr-2"></i>
            <%= serverSettings ? serverSettings.server_name : 'Server' %>
          </p>
        </div>
        <div>
          <p class="text-slate-400">
            <i class="fas fa-code mr-2"></i>
            Powered by AetherGens CMS
          </p>
        </div>
      </div>
    </div>
  </footer>

  <script>
    // Mobile menu toggle
    document.getElementById('mobile-menu-btn')?.addEventListener('click', function() {
      const menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
      const icon = this.querySelector('i');
      if (menu.classList.contains('hidden')) {
        icon.classList.remove('fa-times');
        icon.classList.add('fa-bars');
      } else {
        icon.classList.remove('fa-bars');
        icon.classList.add('fa-times');
      }
    });

    // Comment form submission
    document.getElementById('commentForm')?.addEventListener('submit', async function(e) {
      e.preventDefault();
      const formData = new FormData(this);
      const data = Object.fromEntries(formData);

      try {
        const response = await fetch(window.location.pathname + '/comment', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();
        if (result.success) {
          this.reset();
          alert('Comment submitted successfully! It will be visible after moderation.');
        } else {
          alert('Error: ' + result.error);
        }
      } catch (error) {
        console.error('Comment submission error:', error);
        alert('Failed to submit comment. Please try again.');
      }
    });

    // Reply to comment functionality
    function replyToComment(commentId) {
      const commentForm = document.getElementById('commentForm');
      const contentField = document.getElementById('content');
      commentForm.scrollIntoView({ behavior: 'smooth' });
      contentField.focus();
      contentField.value = `@comment-${commentId} ` + contentField.value;
      commentForm.dataset.parentId = commentId;
    }
  </script>
</body>
</html>