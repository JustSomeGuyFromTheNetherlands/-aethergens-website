<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> - <%= serverSettings ? serverSettings.server_name : 'Server' %></title>
  <meta name="description" content="<%= pageDescription %>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #667eea;
      --secondary-color: #764ba2;
      --accent-color: #f093fb;
      --success-color: #10b981;
      --warning-color: #f59e0b;
      --danger-color: #ef4444;
      --dark-bg: #0f172a;
      --card-bg: #1e293b;
      --text-color: #e2e8f0;
    }

    body {
      background: linear-gradient(135deg, var(--dark-bg) 0%, #1a2332 100%);
      color: var(--text-color);
      font-family: 'Inter', sans-serif;
      min-height: 100vh;
    }

    .navbar {
      background: rgba(15, 23, 42, 0.95) !important;
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .card {
      background: var(--card-bg);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .post-header {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      color: white;
      padding: 3rem 0;
      margin-bottom: 2rem;
    }

    .post-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    .post-meta {
      font-size: 0.9rem;
      opacity: 0.9;
    }

    .post-meta i {
      margin-right: 0.5rem;
    }

    .post-content {
      line-height: 1.8;
      font-size: 1.1rem;
    }

    .post-content h1,
    .post-content h2,
    .post-content h3,
    .post-content h4,
    .post-content h5,
    .post-content h6 {
      color: var(--primary-color);
      margin-top: 2rem;
      margin-bottom: 1rem;
      font-weight: 600;
    }

    .post-content p {
      margin-bottom: 1.5rem;
    }

    .post-content img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin: 1rem 0;
    }

    .post-content blockquote {
      border-left: 4px solid var(--primary-color);
      padding-left: 1rem;
      margin: 1.5rem 0;
      font-style: italic;
      opacity: 0.8;
    }

    .post-content code {
      background: rgba(0, 0, 0, 0.2);
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      font-family: 'Monaco', 'Menlo', monospace;
    }

    .post-content pre {
      background: rgba(0, 0, 0, 0.2);
      padding: 1rem;
      border-radius: 8px;
      overflow-x: auto;
      margin: 1rem 0;
    }

    .post-content pre code {
      background: none;
      padding: 0;
    }

    .category-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      border-radius: 25px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      font-size: 0.8rem;
    }

    .tag-badge {
      display: inline-block;
      padding: 0.3rem 0.6rem;
      border-radius: 15px;
      font-size: 0.75rem;
      margin: 0.2rem;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .tag-badge:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .comment-card {
      margin-bottom: 1rem;
      border-left: 3px solid var(--primary-color);
    }

    .comment-reply {
      margin-left: 2rem;
      border-left: 2px solid var(--secondary-color);
    }

    .comment-author {
      font-weight: 600;
      color: var(--primary-color);
    }

    .comment-date {
      font-size: 0.8rem;
      color: rgba(255, 255, 255, 0.6);
    }

    .related-post-card {
      transition: transform 0.2s ease;
    }

    .related-post-card:hover {
      transform: translateY(-2px);
    }

    .related-post-image {
      height: 150px;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      border-radius: 8px 8px 0 0;
    }

    .btn-outline-primary {
      color: var(--primary-color);
      border-color: var(--primary-color);
    }

    .btn-outline-primary:hover {
      background: var(--primary-color);
      border-color: var(--primary-color);
    }

    .form-control {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: var(--text-color);
    }

    .form-control:focus {
      background: rgba(255, 255, 255, 0.1);
      border-color: var(--primary-color);
      color: var(--text-color);
      box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .form-control::placeholder {
      color: rgba(255, 255, 255, 0.6);
    }

    .share-buttons .btn {
      margin: 0.25rem;
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-server me-2"></i>
        <%= serverSettings ? serverSettings.server_name : 'Server' %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/status">Status</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/leaderboard">Leaderboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/shop">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/blog">Blog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/changelog">Changelog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/vote">Vote</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Post Header -->
  <section class="post-header">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <% if (post.category_name) { %>
            <div class="mb-3">
              <span class="category-badge" style="background-color: <%= post.category_color %>;">
                <i class="fas fa-tag me-1"></i><%= post.category_name %>
              </span>
            </div>
          <% } %>

          <h1 class="post-title"><%= post.title %></h1>

          <div class="post-meta">
            <span class="me-4">
              <i class="fas fa-user"></i>
              <%= post.author_name || 'Anonymous' %>
            </span>
            <span class="me-4">
              <i class="fas fa-calendar"></i>
              <%= new Date(post.published_at || post.created_at).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              }) %>
            </span>
            <span class="me-4">
              <i class="fas fa-eye"></i>
              <%= post.views || 0 %> views
            </span>
            <span>
              <i class="fas fa-clock"></i>
              <%= Math.ceil(post.content.length / 1000) %> min read
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Post Content -->
  <section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <% if (post.featured_image) { %>
            <div class="text-center mb-4">
              <img src="<%= post.featured_image %>" alt="<%= post.title %>" class="img-fluid rounded">
            </div>
          <% } %>

          <% if (post.excerpt) { %>
            <div class="lead mb-4 text-center">
              <%= post.excerpt %>
            </div>
          <% } %>

          <div class="card">
            <div class="card-body">
              <div class="post-content">
                <%= post.content %>
              </div>

              <!-- Tags -->
              <% if (tags.length > 0) { %>
                <div class="mt-4 pt-4 border-top">
                  <h6 class="text-muted mb-3">
                    <i class="fas fa-tags me-2"></i>Tags
                  </h6>
                  <% tags.forEach(tag => { %>
                    <a href="/blog?tag=<%= tag.id %>"
                       class="tag-badge"
                       style="background-color: <%= tag.color %>20; color: <%= tag.color %>; border: 1px solid <%= tag.color %>40;">
                      #<%= tag.name %>
                    </a>
                  <% }); %>
                </div>
              <% } %>

              <!-- Share Buttons -->
              <div class="mt-4 pt-4 border-top">
                <h6 class="text-muted mb-3">
                  <i class="fas fa-share me-2"></i>Share this post
                </h6>
                <div class="share-buttons">
                  <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent(post.title) %>&url=<%= encodeURIComponent(`${req.protocol}://${req.get('host')}/blog/${post.slug}`) %>"
                     class="btn btn-outline-primary btn-sm" target="_blank">
                    <i class="fab fa-twitter"></i> Twitter
                  </a>
                  <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(`${req.protocol}://${req.get('host')}/blog/${post.slug}`) %>"
                     class="btn btn-outline-primary btn-sm" target="_blank">
                    <i class="fab fa-facebook"></i> Facebook
                  </a>
                  <a href="https://wa.me/?text=<%= encodeURIComponent(`${post.title} - ${req.protocol}://${req.get('host')}/blog/${post.slug}`) %>"
                     class="btn btn-outline-primary btn-sm" target="_blank">
                    <i class="fab fa-whatsapp"></i> WhatsApp
                  </a>
                  <button class="btn btn-outline-primary btn-sm" onclick="navigator.share({ title: '<%= post.title %>', url: window.location.href })">
                    <i class="fas fa-share"></i> Share
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Comments Section -->
  <% if (post.comments_enabled) { %>
    <section class="py-5 bg-dark">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <h3 class="mb-4">
              <i class="fas fa-comments text-primary me-2"></i>
              Comments (<%= comments.length %>)
            </h3>

            <!-- Comment Form -->
            <div class="card mb-4">
              <div class="card-header">
                <h5 class="mb-0">Leave a Comment</h5>
              </div>
              <div class="card-body">
                <form id="commentForm">
                  <div class="mb-3">
                    <label for="author_name" class="form-label">Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="author_name" name="author_name" required>
                  </div>
                  <div class="mb-3">
                    <label for="author_email" class="form-label">Email (optional)</label>
                    <input type="email" class="form-control" id="author_email" name="author_email">
                    <div class="form-text">Your email will not be published.</div>
                  </div>
                  <div class="mb-3">
                    <label for="content" class="form-label">Comment <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="content" name="content" rows="4" required></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane me-2"></i>Post Comment
                  </button>
                </form>
              </div>
            </div>

            <!-- Comments List -->
            <div id="commentsList">
              <% if (comments.length === 0) { %>
                <div class="text-center py-4">
                  <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                  <h5 class="text-muted">No comments yet</h5>
                  <p class="text-muted">Be the first to comment!</p>
                </div>
              <% } else { %>
                <% comments.forEach(comment => { %>
                  <div class="card comment-card">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start mb-2">
                        <h6 class="comment-author mb-0"><%= comment.author_name %></h6>
                        <small class="comment-date">
                          <%= new Date(comment.created_at).toLocaleDateString() %>
                        </small>
                      </div>
                      <p class="mb-2"><%= comment.content %></p>
                      <button class="btn btn-link btn-sm text-primary p-0" onclick="replyToComment(<%= comment.id %>)">
                        <i class="fas fa-reply me-1"></i>Reply
                      </button>

                      <!-- Replies -->
                      <% if (comment.replies && comment.replies.length > 0) { %>
                        <div class="mt-3">
                          <% comment.replies.forEach(reply => { %>
                            <div class="card comment-card comment-reply">
                              <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                  <h6 class="comment-author mb-0"><%= reply.author_name %></h6>
                                  <small class="comment-date">
                                    <%= new Date(reply.created_at).toLocaleDateString() %>
                                  </small>
                                </div>
                                <p class="mb-0"><%= reply.content %></p>
                              </div>
                            </div>
                          <% }); %>
                        </div>
                      <% } %>
                    </div>
                  </div>
                <% }); %>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% } %>

  <!-- Related Posts -->
  <% if (relatedPosts.length > 0) { %>
    <section class="py-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <h3 class="text-center mb-4">
              <i class="fas fa-link text-primary me-2"></i>
              Related Posts
            </h3>
            <div class="row g-4">
              <% relatedPosts.forEach(relatedPost => { %>
                <div class="col-md-4">
                  <div class="card related-post-card h-100">
                    <% if (relatedPost.featured_image) { %>
                      <div class="related-post-image" style="background-image: url('<%= relatedPost.featured_image %>')"></div>
                    <% } %>
                    <div class="card-body d-flex flex-column">
                      <h6 class="card-title">
                        <a href="/blog/<%= relatedPost.slug %>" class="text-decoration-none">
                          <%= relatedPost.title %>
                        </a>
                      </h6>
                      <p class="card-text text-muted small flex-grow-1">
                        <%= relatedPost.excerpt ? relatedPost.excerpt.substring(0, 100) + '...' : '' %>
                      </p>
                      <small class="text-muted">
                        <%= new Date(relatedPost.published_at).toLocaleDateString() %>
                      </small>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% } %>

  <!-- Footer -->
  <footer class="bg-dark text-light py-4 mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <p class="mb-0">
            <i class="fas fa-server me-2"></i>
            <%= serverSettings ? serverSettings.server_name : 'Server' %>
          </p>
        </div>
        <div class="col-md-6 text-end">
          <p class="mb-0">
            <i class="fas fa-code me-2"></i>
            Powered by AetherGens CMS
          </p>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Comment form submission
    document.getElementById('commentForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const formData = new FormData(this);
      const data = Object.fromEntries(formData);

      try {
        const response = await fetch(window.location.pathname + '/comment', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          // Clear form
          this.reset();
          // Show success message
          alert('Comment submitted successfully! It will be visible after moderation.');
        } else {
          alert('Error: ' + result.error);
        }
      } catch (error) {
        console.error('Comment submission error:', error);
        alert('Failed to submit comment. Please try again.');
      }
    });

    // Reply to comment functionality
    function replyToComment(commentId) {
      const commentForm = document.getElementById('commentForm');
      const contentField = document.getElementById('content');

      // Scroll to form
      commentForm.scrollIntoView({ behavior: 'smooth' });

      // Focus on content field
      contentField.focus();

      // Add reply indicator
      contentField.value = `@comment-${commentId} ` + contentField.value;

      // Store parent ID for submission
      commentForm.dataset.parentId = commentId;
    }

    // Update form submission to handle replies
    document.getElementById('commentForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const formData = new FormData(this);
      const data = Object.fromEntries(formData);

      // Add parent ID if replying
      if (this.dataset.parentId) {
        data.parent_id = this.dataset.parentId;
        delete this.dataset.parentId;
      }

      try {
        const response = await fetch(window.location.pathname + '/comment', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          // Clear form
          this.reset();
          // Show success message
          alert('Comment submitted successfully! It will be visible after moderation.');
        } else {
          alert('Error: ' + result.error);
        }
      } catch (error) {
        console.error('Comment submission error:', error);
        alert('Failed to submit comment. Please try again.');
      }
    });
  </script>
</body>
</html>
