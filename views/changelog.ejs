<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Changelog - <%= serverSettings ? serverSettings.server_name : 'Server' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
    * { font-family: 'Inter', sans-serif; }
    body { background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 50%, #2d1b3d 100%); min-height: 100vh; }
    .hero-gradient { background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%); }
    .card-hover { transition: all 0.3s ease; }
    .card-hover:hover { transform: translateY(-5px); box-shadow: 0 20px 40px rgba(0,0,0,0.3); }
    .glow { box-shadow: 0 0 20px rgba(102, 126, 234, 0.5); }
  </style>
</head>
<body class="text-slate-200">
  <!-- Navigation -->
  <nav class="bg-slate-900/80 backdrop-blur-md border-b border-purple-500/20 sticky top-0 z-50 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-20 items-center">
        <div class="flex items-center space-x-2">
          <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center">
            <i class="fas fa-cube text-white text-xl"></i>
          </div>
          <a href="/" class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent hover:opacity-80 transition"><%= serverSettings ? serverSettings.server_name : 'Minecraft Server' %></a>
        </div>
        <div class="hidden md:flex items-center space-x-8">
          <a href="/" class="hover:text-purple-400 transition font-medium">Home</a>
          <a href="/status" class="hover:text-purple-400 transition font-medium">Status</a>
          <a href="/leaderboard" class="hover:text-purple-400 transition font-medium">Leaderboard</a>
          <a href="/shop" class="hover:text-purple-400 transition font-medium">Shop</a>
          <a href="/blog" class="hover:text-purple-400 transition font-medium">Blog</a>
          <a href="/changelog" class="hover:text-purple-400 transition font-medium text-purple-400"><i class="fas fa-history mr-1"></i>Changelog</a>
          <a href="/vote" class="hover:text-purple-400 transition font-medium">Vote</a>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/admin" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-6 py-2 rounded-lg font-semibold shadow-lg glow hidden md:block">Admin</a>
          <button id="mobile-menu-btn" class="md:hidden text-slate-200 hover:text-purple-400 transition p-2">
            <i class="fas fa-bars text-xl"></i>
          </button>
        </div>
      </div>
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-purple-500/20 mt-2 pt-4">
        <div class="flex flex-col space-y-3">
          <a href="/" class="hover:text-purple-400 transition font-medium py-2">Home</a>
          <a href="/status" class="hover:text-purple-400 transition font-medium py-2">Status</a>
          <a href="/leaderboard" class="hover:text-purple-400 transition font-medium py-2">Leaderboard</a>
          <a href="/shop" class="hover:text-purple-400 transition font-medium py-2">Shop</a>
          <a href="/blog" class="hover:text-purple-400 transition font-medium py-2">Blog</a>
          <a href="/changelog" class="hover:text-purple-400 transition font-medium py-2 text-purple-400"><i class="fas fa-history mr-1"></i>Changelog</a>
          <a href="/vote" class="hover:text-purple-400 transition font-medium py-2">Vote</a>
          <a href="/admin" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-6 py-2 rounded-lg font-semibold shadow-lg text-center mt-2">Admin</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="hero-gradient py-20 text-center relative overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-0 left-0 w-96 h-96 bg-purple-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-pink-500 rounded-full blur-3xl"></div>
    </div>
    <div class="relative z-10 max-w-4xl mx-auto px-4">
      <h1 class="text-5xl md:text-6xl font-black text-white mb-4">
        <i class="fas fa-history mr-3"></i>Changelog
      </h1>
      <p class="text-xl text-slate-100 font-light">Stay updated with the latest features, improvements, and bug fixes</p>
    </div>
  </section>

  <!-- Stats Cards -->
  <section class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 text-center card-hover">
          <i class="fas fa-code-branch text-4xl text-purple-400 mb-3"></i>
          <h4 class="text-3xl font-bold text-white mb-1"><%= stats.total_entries || 0 %></h4>
          <p class="text-slate-400">Total Releases</p>
        </div>
        <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 text-center card-hover">
          <i class="fas fa-star text-4xl text-yellow-400 mb-3"></i>
          <h4 class="text-3xl font-bold text-white mb-1"><%= stats.major_releases || 0 %></h4>
          <p class="text-slate-400">Major Releases</p>
        </div>
        <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 text-center card-hover">
          <i class="fas fa-calendar-alt text-4xl text-pink-400 mb-3"></i>
          <h4 class="text-2xl font-bold text-white mb-1">
            <% if (stats.latest_release) { %>
              <%= new Date(stats.latest_release).toLocaleDateString() %>
            <% } else { %>
              N/A
            <% } %>
          </h4>
          <p class="text-slate-400">Latest Release</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Changelog Timeline -->
  <section class="py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <% if (entries.length === 0) { %>
        <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-12 border border-purple-500/20 text-center">
          <i class="fas fa-list text-6xl text-slate-500 mb-4"></i>
          <h3 class="text-2xl font-bold text-white mb-2">No changelog entries yet</h3>
          <p class="text-slate-400">Check back later for updates!</p>
        </div>
      <% } else { %>
        <div class="space-y-6">
          <% entries.forEach(entry => { %>
            <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 card-hover <%= entry.is_major ? 'ring-2 ring-yellow-500/50' : '' %>">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <code class="px-3 py-1 rounded-lg <%= entry.is_major ? 'bg-yellow-500/20 text-yellow-400' : 'bg-purple-500/20 text-purple-400' %> font-semibold">
                      v<%= entry.version %>
                    </code>
                    <% if (entry.is_major) { %>
                      <span class="px-3 py-1 rounded-lg bg-yellow-500/20 text-yellow-400 text-xs font-semibold">Major Release</span>
                    <% } else { %>
                      <span class="px-3 py-1 rounded-lg bg-purple-500/20 text-purple-400 text-xs font-semibold">Update</span>
                    <% } %>
                  </div>
                  <h3 class="text-2xl font-bold text-white mb-2"><%= entry.title %></h3>
                </div>
                <div class="text-right mt-2 md:mt-0">
                  <small class="text-slate-500">
                    <i class="fas fa-calendar mr-1"></i>
                    <%= new Date(entry.release_date).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    }) %>
                  </small>
                </div>
              </div>

              <% if (entry.description) { %>
                <div class="text-slate-300 leading-relaxed whitespace-pre-line"><%= entry.description %></div>
              <% } else { %>
                <p class="text-slate-500 italic">No description available</p>
              <% } %>
            </div>
          <% }); %>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
          <div class="mt-8 flex justify-center">
            <div class="flex space-x-2">
              <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>" class="px-4 py-2 bg-slate-800/60 border border-purple-500/20 rounded-lg hover:bg-purple-500/20 transition">
                  <i class="fas fa-chevron-left"></i> Previous
                </a>
              <% } %>

              <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                <a href="?page=<%= i %>" class="px-4 py-2 <%= i === currentPage ? 'bg-gradient-to-r from-purple-600 to-pink-600' : 'bg-slate-800/60 border border-purple-500/20' %> rounded-lg hover:bg-purple-500/20 transition">
                  <%= i %>
                </a>
              <% } %>

              <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>" class="px-4 py-2 bg-slate-800/60 border border-purple-500/20 rounded-lg hover:bg-purple-500/20 transition">
                  Next <i class="fas fa-chevron-right"></i>
                </a>
              <% } %>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-slate-900/80 border-t border-purple-500/20 py-8 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <p class="text-slate-400">
            <i class="fas fa-server mr-2"></i>
            <%= serverSettings ? serverSettings.server_name : 'Server' %>
          </p>
        </div>
        <div>
          <p class="text-slate-400">
            <i class="fas fa-code mr-2"></i>
            Powered by AetherGens CMS
          </p>
        </div>
      </div>
    </div>
  </footer>

  <script>
    // Mobile menu toggle
    document.getElementById('mobile-menu-btn')?.addEventListener('click', function() {
      const menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
      const icon = this.querySelector('i');
      if (menu.classList.contains('hidden')) {
        icon.classList.remove('fa-times');
        icon.classList.add('fa-bars');
      } else {
        icon.classList.remove('fa-bars');
        icon.classList.add('fa-times');
      }
    });
  </script>
</body>
</html>