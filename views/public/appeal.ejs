<%- include('../partials/head', { pageTitle: 'Ban Appeal', pageDescription: 'Submit an appeal if you believe you were banned unfairly' }) %>
<% const currentPage = 'appeal'; %>
<%- include('../partials/navbar') %>

<section class="py-16">
    <div class="max-w-2xl mx-auto px-4">
        <div class="text-center mb-8">
            <h1 class="text-5xl font-black mb-4 bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">Ban Appeal</h1>
            <p class="text-slate-400 text-lg">Submit an appeal if you believe you were banned unfairly</p>
        </div>
        
        <% if (message) { %>
            <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">
                <%= message %>
            </div>
        <% } %>
        
        <% if (error) { %>
            <div class="bg-red-900/50 border border-red-500 rounded-lg p-4 mb-6 text-red-300">
                <%= error %>
            </div>
        <% } %>
        
        <% if (banInfo) { %>
            <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 mb-6 border border-purple-500/20">
                <h3 class="text-xl font-bold mb-4 text-white">Ban Information</h3>
                <p class="text-slate-300 mb-2"><strong class="text-white">Reason:</strong> <%= banInfo.reason %></p>
                <p class="text-slate-300 mb-2"><strong class="text-white">Banned By:</strong> <%= banInfo.banned_by %></p>
                <p class="text-slate-300"><strong class="text-white">Date:</strong> <%= new Date(banInfo.ban_date).toLocaleDateString() %></p>
            </div>
        <% } %>
        
        <form method="POST" class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-8 border border-purple-500/20">
            <div class="space-y-4">
                <div>
                    <label class="block text-slate-300 mb-2">Minecraft Username *</label>
                    <input type="text" name="username" required value="<%= banInfo ? banInfo.player_username : '' %>" 
                           class="w-full bg-slate-900 border border-slate-700 rounded px-4 py-2 text-white focus:border-purple-500 focus:outline-none transition">
                </div>
                <div>
                    <label class="block text-slate-300 mb-2">Email Address *</label>
                    <input type="email" name="email" required 
                           class="w-full bg-slate-900 border border-slate-700 rounded px-4 py-2 text-white focus:border-purple-500 focus:outline-none transition">
                </div>
                <div>
                    <label class="block text-slate-300 mb-2">Appeal Message *</label>
                    <textarea name="appeal_text" required rows="6" 
                              class="w-full bg-slate-900 border border-slate-700 rounded px-4 py-2 text-white focus:border-purple-500 focus:outline-none transition"></textarea>
                </div>
                <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 px-6 py-3 rounded-lg font-semibold transition-all">
                    <i class="fas fa-paper-plane mr-2"></i>Submit Appeal
                </button>
            </div>
        </form>
    </div>
</section>

<%- include('../partials/footer') %>
</body>
</html>
