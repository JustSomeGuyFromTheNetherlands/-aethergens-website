<%- include('../partials/head', { pageTitle: 'Staff Application', pageDescription: 'Apply to join our staff team' }) %>
<% const currentPage = 'apply'; %>
<%- include('../partials/navbar') %>

<section class="py-16">
    <div class="max-w-2xl mx-auto px-4">
        <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-8 border border-purple-500/20 shadow-2xl">
            <h1 class="text-4xl font-black text-white mb-2 text-center">Staff Application</h1>
            <p class="text-slate-400 text-center mb-8">Apply to join our staff team</p>
            
            <% if (message) { %>
                <div class="bg-green-900/50 border border-green-500 rounded-lg p-4 mb-6 text-green-300">
                    <%= message %>
                </div>
            <% } %>
            
            <% if (error) { %>
                <div class="bg-red-900/50 border border-red-500 rounded-lg p-4 mb-6 text-red-300">
                    <%= error %>
                </div>
            <% } %>
            
            <% if (roles.length === 0) { %>
                <div class="text-center py-12">
                    <i class="fas fa-ban text-6xl text-slate-600 mb-4"></i>
                    <p class="text-slate-400 text-xl">No open positions at this time.</p>
                </div>
            <% } else { %>
                <form method="POST" class="space-y-4">
                    <div>
                        <label class="block text-slate-300 mb-2">Position *</label>
                        <select name="role" required class="w-full bg-slate-900 border border-slate-700 rounded px-4 py-3 text-white focus:border-purple-500 focus:outline-none transition">
                            <option value="">Select a position...</option>
                            <% roles.forEach(role => { %>
                                <option value="<%= role.role %>"><%= role.role %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div>
                        <label class="block text-slate-300 mb-2">Minecraft Username *</label>
                        <input type="text" name="username" required 
                               class="w-full bg-slate-900 border border-slate-700 rounded px-4 py-3 text-white focus:border-purple-500 focus:outline-none transition">
                    </div>
                    <div>
                        <label class="block text-slate-300 mb-2">Email Address *</label>
                        <input type="email" name="email" required 
                               class="w-full bg-slate-900 border border-slate-700 rounded px-4 py-3 text-white focus:border-purple-500 focus:outline-none transition">
                    </div>
                    <div>
                        <label class="block text-slate-300 mb-2">Discord Username *</label>
                        <input type="text" name="discord" required 
                               class="w-full bg-slate-900 border border-slate-700 rounded px-4 py-3 text-white focus:border-purple-500 focus:outline-none transition">
                    </div>
                    <div>
                        <label class="block text-slate-300 mb-2">Age *</label>
                        <input type="number" name="age" required min="13" 
                               class="w-full bg-slate-900 border border-slate-700 rounded px-4 py-3 text-white focus:border-purple-500 focus:outline-none transition">
                    </div>
                    <div>
                        <label class="block text-slate-300 mb-2">Experience *</label>
                        <textarea name="experience" required rows="6" 
                                  class="w-full bg-slate-900 border border-slate-700 rounded px-4 py-3 text-white focus:border-purple-500 focus:outline-none transition"></textarea>
                    </div>
                    <button type="submit" class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-6 py-3 rounded-lg font-semibold transition-all">
                        <i class="fas fa-paper-plane mr-2"></i>Submit Application
                    </button>
                </form>
            <% } %>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>
</body>
</html>
