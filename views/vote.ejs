<%- include('partials/head', { pageTitle: 'Vote for Server', pageDescription: 'Help us grow by voting on these sites! Earn rewards for your support.' }) %>
<% const currentPage = 'vote'; %>
<%- include('partials/navbar') %>

<section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-5xl md:text-6xl font-black text-white mb-4">
                <i class="fas fa-vote-yea text-purple-400 mr-4"></i>Vote for Our Server
            </h1>
            <p class="text-xl text-slate-400">Help us grow by voting on these sites! Earn rewards for your support.</p>
        </div>

        <% if (message) { %>
            <div class="bg-green-900/50 border border-green-500 rounded-lg p-6 mb-8 text-center">
                <i class="fas fa-check-circle text-3xl text-green-400 mb-4"></i>
                <p class="text-lg text-green-300"><%= message %></p>
            </div>
        <% } %>

        <!-- Voting Sites Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
            <% votingSites.forEach((site, index) => { %>
                <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 card-hover">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-slate-700 rounded-lg flex items-center justify-center">
                                <i class="fas fa-external-link-alt text-purple-400"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-white"><%= site.name %></h3>
                                <p class="text-slate-400 text-sm">Vote every <%= site.cooldown %> hours</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-lg font-bold text-green-400"><%= site.reward %></div>
                            <div class="text-xs text-slate-500">Reward</div>
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <% if (userVotes[index] && userVotes[index].canVote) { %>
                            <a href="<%= site.url %>"
                               target="_blank"
                               onclick="openVoteWindow(<%= index %>, '<%= site.url %>'); return false;"
                               class="flex-1 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-6 py-3 rounded-lg font-semibold text-center transition-all">
                                <i class="fas fa-vote-yea mr-2"></i>Vote Now
                            </a>
                        <% } else { %>
                            <div class="flex-1 bg-slate-700 px-6 py-3 rounded-lg text-center text-slate-400 cursor-not-allowed">
                                <i class="fas fa-clock mr-2"></i>Next vote in 12h
                            </div>
                        <% } %>

                        <div class="ml-4 text-center">
                            <div class="text-2xl font-bold text-blue-400" id="voteCount<%= index %>">0</div>
                            <div class="text-xs text-slate-500">Today's Votes</div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Vote Statistics -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 text-center">
                <i class="fas fa-chart-line text-3xl text-purple-400 mb-4"></i>
                <div class="text-3xl font-bold text-white" id="totalVotes"><%= voteStats.totalVotes.toLocaleString() %></div>
                <p class="text-slate-400">Total Votes This Month</p>
            </div>
            <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 text-center">
                <i class="fas fa-users text-3xl text-green-400 mb-4"></i>
                <div class="text-3xl font-bold text-white" id="uniqueVoters"><%= voteStats.uniqueVoters.toLocaleString() %></div>
                <p class="text-slate-400">Unique Voters</p>
            </div>
            <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 text-center">
                <i class="fas fa-gift text-3xl text-pink-400 mb-4"></i>
                <div class="text-3xl font-bold text-white" id="rewardsGiven"><%= voteStats.rewardsGiven.toLocaleString() %></div>
                <p class="text-slate-400">Rewards Given</p>
            </div>
        </div>

        <!-- Top Voters -->
        <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20">
            <h2 class="text-3xl font-bold mb-6 text-center text-white">
                <i class="fas fa-crown text-yellow-400 mr-2"></i>
                Top Voters This Month
            </h2>
            <div class="space-y-4">
                <% topVoters.forEach(voter => { %>
                    <div class="flex items-center justify-between p-4 bg-slate-900/50 rounded-lg">
                        <div class="flex items-center space-x-4">
                            <div class="w-10 h-10 rounded-full flex items-center justify-center font-bold text-white
                                <% if (voter.rank === 1) { %>bg-yellow-500<% } else if (voter.rank === 2) { %>bg-gray-400<% } else if (voter.rank === 3) { %>bg-orange-600<% } else { %>bg-slate-600<% } %>">
                                <%= voter.rank %>
                            </div>
                            <div>
                                <div class="font-bold text-white"><%= voter.name %></div>
                                <div class="text-slate-400 text-sm">Rank #<%= voter.rank %></div>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-2xl font-bold text-purple-400"><%= voter.votes %></div>
                            <div class="text-slate-400 text-sm">Votes</div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>

<script>
    // Simulate vote counts (in real implementation, this would come from server)
    document.addEventListener('DOMContentLoaded', function() {
        // Update vote counts with some animation
        const voteCounts = [23, 18, 31, 15];
        voteCounts.forEach((count, index) => {
            setTimeout(() => {
                animateNumber(`voteCount${index}`, 0, count, 1000);
            }, index * 200);
        });

        animateNumber('totalVotes', 0, <%= voteStats.totalVotes %>, 2000);
        animateNumber('uniqueVoters', 0, <%= voteStats.uniqueVoters %>, 2000);
        animateNumber('rewardsGiven', 0, <%= voteStats.rewardsGiven %>, 2000);
    });

    function animateNumber(elementId, start, end, duration) {
        const element = document.getElementById(elementId);
        if (!element) return;

        const startTime = performance.now();
        const difference = end - start;

        function update(currentTime) {
            const elapsed = currentTime - startTime;
            const progress = Math.min(elapsed / duration, 1);

            const current = Math.floor(start + difference * progress);
            element.textContent = current.toLocaleString();

            if (progress < 1) {
                requestAnimationFrame(update);
            }
        }

        requestAnimationFrame(update);
    }

    function openVoteWindow(siteId, url) {
        // Open voting site in new window
        const voteWindow = window.open(url, 'voteWindow', 'width=800,height=600,scrollbars=yes,resizable=yes');

        // Check if window was closed (user completed vote)
        const checkClosed = setInterval(() => {
            if (voteWindow.closed) {
                clearInterval(checkClosed);
                // In real implementation, you'd verify the vote with the voting site
                // For demo, just show success message
                setTimeout(() => {
                    window.location.href = '/vote?site=' + siteId + '&callback=1';
                }, 1000);
            }
        }, 1000);
    }
</script>
</body>
</html>
