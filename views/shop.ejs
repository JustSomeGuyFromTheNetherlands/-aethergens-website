<%- include('partials/head', { pageTitle: 'Shop', pageDescription: 'Support the server and get awesome perks!' }) %>
<% const currentPage = 'shop'; %>
<%- include('partials/navbar') %>

<section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-5xl md:text-6xl font-black text-white mb-4">
                <i class="fas fa-shopping-cart text-green-400 mr-4"></i>Server Shop
            </h1>
            <p class="text-xl text-slate-400">Support the server and get awesome perks!</p>
        </div>

        <% if (message) { %>
            <div class="bg-blue-900/50 border border-blue-500 rounded-lg p-6 mb-8 text-center">
                <i class="fas fa-info-circle text-3xl text-blue-400 mb-4"></i>
                <p class="text-lg text-blue-300"><%= message %></p>
            </div>
        <% } %>

        <!-- Shop Categories -->
        <% if (shopCategories.length === 0) { %>
            <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-12 border border-purple-500/20 text-center">
                <i class="fas fa-store text-6xl text-slate-400 mb-4"></i>
                <p class="text-xl text-slate-400">No shop items available yet. Check back soon!</p>
            </div>
        <% } else { %>
            <% shopCategories.forEach(category => { %>
                <div class="mb-12">
                    <div class="flex items-center mb-6">
                        <i class="fas <%= category.icon %> text-3xl text-<%= category.color %>-400 mr-4"></i>
                        <h2 class="text-3xl font-bold text-white"><%= category.name %></h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% category.items.forEach(item => { %>
                            <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-6 border border-purple-500/20 card-hover">
                                <div class="text-center mb-4">
                                    <% if (item.image) { %>
                                        <img src="<%= item.image %>" alt="<%= item.name %>"
                                             class="w-full h-32 object-cover rounded-lg mb-4">
                                    <% } %>
                                    <h3 class="text-xl font-bold text-white mb-2"><%= item.name %></h3>
                                    <div class="text-3xl font-black text-green-400 mb-2">$<%= parseFloat(item.price).toFixed(2) %></div>
                                    <p class="text-slate-400 text-sm mb-4"><%= item.description %></p>
                                </div>

                                <% if (item.features && item.features.length > 0) { %>
                                    <div class="space-y-2 mb-6">
                                        <% item.features.forEach(feature => { %>
                                            <div class="flex items-center text-sm text-slate-300">
                                                <i class="fas fa-check text-green-400 mr-2"></i>
                                                <%= feature %>
                                            </div>
                                        <% }); %>
                                    </div>
                                <% } %>

                                <form method="POST" action="/shop" class="text-center">
                                    <input type="hidden" name="item_name" value="<%= item.name %>">
                                    <input type="hidden" name="price" value="<%= item.price %>">
                                    <input type="hidden" name="purchase" value="1">
                                    <button type="submit" class="w-full bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 px-6 py-3 rounded-lg font-semibold transition-all">
                                        <i class="fas fa-shopping-cart mr-2"></i>Purchase
                                    </button>
                                </form>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        <% } %>

        <!-- Featured Deals -->
        <div class="mt-16">
            <h2 class="text-3xl font-bold mb-8 text-center text-white">
                <i class="fas fa-star text-yellow-400 mr-2"></i>
                Special Offers
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-8 border border-purple-500/20 text-center bg-gradient-to-br from-purple-900/50 to-pink-900/50">
                    <div class="text-6xl mb-4">üéÅ</div>
                    <h3 class="text-2xl font-bold text-white mb-2">Bundle Deal</h3>
                    <p class="text-slate-400 mb-4">VIP + Particle Effects + Builder Kit</p>
                    <div class="text-4xl font-black text-green-400 mb-4">$12.99 <span class="text-lg text-slate-400 line-through">$17.97</span></div>
                    <div class="text-sm text-green-400 mb-6">Save 28%!</div>
                    <button class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-8 py-4 rounded-lg font-semibold text-lg transition-all">
                        Get Bundle
                    </button>
                </div>

                <div class="bg-slate-800/60 backdrop-blur-xl rounded-2xl p-8 border border-blue-500/20 text-center bg-gradient-to-br from-blue-900/50 to-cyan-900/50">
                    <div class="text-6xl mb-4">‚ö°</div>
                    <h3 class="text-2xl font-bold text-white mb-2">Season Pass</h3>
                    <p class="text-slate-400 mb-4">All perks for 30 days + monthly rewards</p>
                    <div class="text-4xl font-black text-green-400 mb-4">$24.99</div>
                    <div class="text-sm text-blue-400 mb-6">Best value!</div>
                    <button class="bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 px-8 py-4 rounded-lg font-semibold text-lg transition-all">
                        Get Pass
                    </button>
                </div>
            </div>
        </div>

        <!-- Payment Methods -->
        <div class="mt-16 text-center">
            <h2 class="text-3xl font-bold mb-8 text-white">Secure Payments</h2>
            <div class="flex flex-wrap justify-center gap-8 mb-8">
                <div class="flex items-center bg-slate-800/60 px-6 py-3 rounded-lg border border-purple-500/20">
                    <i class="fab fa-paypal text-2xl text-blue-400 mr-3"></i>
                    <span class="text-white font-medium">PayPal</span>
                </div>
                <div class="flex items-center bg-slate-800/60 px-6 py-3 rounded-lg border border-purple-500/20">
                    <i class="fab fa-stripe text-2xl text-purple-400 mr-3"></i>
                    <span class="text-white font-medium">Stripe</span>
                </div>
                <div class="flex items-center bg-slate-800/60 px-6 py-3 rounded-lg border border-purple-500/20">
                    <i class="fas fa-credit-card text-2xl text-green-400 mr-3"></i>
                    <span class="text-white font-medium">Credit Card</span>
                </div>
                <div class="flex items-center bg-slate-800/60 px-6 py-3 rounded-lg border border-purple-500/20">
                    <i class="fab fa-bitcoin text-2xl text-orange-400 mr-3"></i>
                    <span class="text-white font-medium">Crypto</span>
                </div>
            </div>
            <p class="text-slate-400 text-sm">All transactions are secure and instant. Support available 24/7.</p>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
</body>
</html>
